<div class="row">
    <div class="col-md-4">
        <h2>Filter Articles by Date</h2>
        <form method="post">
            <div class="form-group">
                <label>From Date: <input type="date" name="fromDate" class="form-control" /></label>
            </div>
            <div class="form-group">
                <label>To Date: <input type="date" name="toDate" class="form-control" /></label>
            </div>
            <button type="submit" class="btn btn-primary">Apply Filter</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
    </div>
</div>

